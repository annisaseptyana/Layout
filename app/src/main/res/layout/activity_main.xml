<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bp_navy"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_otherlayouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/bp_green"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/bp_navy"
        android:text="@string/other_layouts"/>

    <Button
        android:id="@+id/btn_constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/bp_green"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/bp_navy"
        android:text="@string/constraint_layout"/>

</LinearLayout>